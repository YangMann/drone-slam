<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/loginForm"
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
        >

    <TableRow android:orientation="vertical">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="IP"
                android:textSize="10pt"
                />
        <!-- 输入用户名的文本框 -->
        <EditText
                android:id="@+id/ipedittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:text="192.168.1.1"
                android:selectAllOnFocus="true"
                />
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="视频端口号"
                android:textSize="10pt"
                android:id="@+id/textView1"
                android:layout_column="0"/>

        <EditText
                android:id="@+id/port1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:text="5555"
                android:selectAllOnFocus="true"
                android:layout_column="1"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="数据端口号"
                android:textSize="10pt"
                android:id="@+id/textView2"
                android:layout_column="0"/>

        <EditText
                android:id="@+id/port2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:text="5554"
                android:selectAllOnFocus="true"
                android:layout_column="1"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Width"
                android:textSize="10pt"
                android:id="@+id/textView3"
                android:layout_column="0"/>

        <EditText
                android:id="@+id/editwidth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:text="480"
                android:selectAllOnFocus="true"
                android:layout_column="1"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="10pt"
                android:id="@+id/textView4"
                android:layout_column="0"/>

        <EditText
                android:id="@+id/editheight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:text="320"
                android:selectAllOnFocus="true"
                android:layout_column="1"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="数据速率"
                android:textSize="10pt"
                android:id="@+id/textView5"
                android:layout_column="0"/>

        <EditText
                android:id="@+id/fpsdata"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:text="200"
                android:selectAllOnFocus="true"
                android:layout_column="1"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="视频帧率"
                android:textSize="10pt"
                android:id="@+id/textView6"
                android:layout_column="0"/>

        <EditText
                android:id="@+id/fpsvideo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:text="15"
                android:selectAllOnFocus="true"
                android:layout_column="1"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>

</TableLayout>
